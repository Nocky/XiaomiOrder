<resources>

    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorAccent">#87CEFA</item>
        <item name="alertDialogProTheme">@style/AppTheme.FlavoredMaterial</item>
    </style>

    <style name="AppTheme.FlavoredMaterial" parent="Theme.AlertDialogPro.Material">
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorAccent">#87CEFA</item>
        <item name="android:windowTitleStyle">@style/AdpTitleStyle</item>
        <item name="adpButtonBarNegativeButtonStyle">@style/AdpNormalButtonStyle</item>
        <item name="adpButtonBarNeutralButtonStyle">@style/AdpNormalButtonStyle</item>
    </style>
    <style name="AdpTitleStyle" parent="DialogWindowTitle.AlertDialogPro.Material">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    <style name="AdpNormalButtonStyle" parent="Widget.AlertDialogPro.Material.Button">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="BottomSheet.StyleDialog" parent="BottomSheet.Dialog">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowAnimationStyle">@style/BottomSheet.Animation</item>
        <item name="android:textColorPrimary">#ff000000</item>
        <item name="android:textColorSecondary">#8f000000</item>
        <item name="android:textColorHint">#6f000000</item>
        <item name="bs_dialogBackground">@android:color/background_light</item>
        <item name="bs_dividerColor">#1f000000</item>
        <item name="bs_numColumns">3</item>
        <item name="bs_listStyle">@style/BottomSheet.StyleList</item>
    </style>
    <style name="BottomSheet.StyleList" parent="Theme.AppCompat">
        <item name="bottomSheetStyle">@style/BottomSheet.StyleDialog</item>
    </style>
</resources>
